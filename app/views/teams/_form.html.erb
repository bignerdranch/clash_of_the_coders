<%= form_for @team do |f| %>
  <div class="large-3 columns">
    <%= f.label :name, class: "right" %>
  </div>
  <div class="large-9 columns">
    <%= f.text_field :name %>
  </div>

  <div class="large-3 columns">
    <%= f.label :homepage, class: "right" %>
  </div>
  <div class="large-9 columns">
    <%= f.text_field :homepage %>
  </div>

  <div class="large-3 columns">
    <%= f.label :description, class: "right" %>
  </div>
  <div class="large-9 columns">
    <%= f.text_area :description, rows: 10 %>
  </div>

  <div class="large-3 columns">
    <label class="right">Select a Team</label>
  </div>
  <div class="large-9 columns">
    <%= f.collection_select(:member_ids, available_users, :id, :name, {prompt: 'Select team members' }, {multiple: true, class: 'chosen-select big'}) %>
  </div>

  <div class="large-9 columns buffered-top">
    <%= f.submit 'Submit', class: "button expand" %>
  </div>
<% end %>
